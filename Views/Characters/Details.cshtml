@model CharacterDetailsViewModel

@{
    ViewData["Title"] = "Детали персонажа";
}

<h1>Детали персонажа</h1>
<br />
<div>
    <h4>Персонаж</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Здоровье
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Health)
        </dd>
        <dt class="col-sm-2">
            Уровень
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            Класс
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CharacterClassName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a> |
    <a asp-controller="CharacterHistories" asp-action="Index" asp-route-characterId="@Model.Id">История изменений</a>
</div>