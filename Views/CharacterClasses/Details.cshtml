@model CharacterClassDetailsViewModel

@{
    ViewData["Title"] = "Подробнее о классе";
}

<h1>Подробнее о классе</h1>
<br />
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название класса
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Сила
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strength)
        </dd>
        <dt class="col-sm-2">
            Ловкость
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agility)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a> |
    <a asp-controller="CharacterClassHistories" asp-action="Index" asp-route-classId="@Model.Id">История изменений</a>
</div>