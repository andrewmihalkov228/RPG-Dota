@model CharacterClassDeleteViewModel

@{
    ViewData["Title"] = "Удаление класса";
}

<h1>Удаление класса</h1>
<br />
<h3>Вы уверены, что хотите удалить этот класс?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>